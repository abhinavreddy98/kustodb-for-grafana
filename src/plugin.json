{

    "type": "datasource",

    "name": "KustoDB",

    "id": "kusto-datasource",



    "info": {

      "description": "Grafana data source for Kusto Databases",

      "author": {

        "name": "Abhinav Reddy",

        "url": "https://github.com/abhinavreddy98/kustodb-for-grafana/"

      },

      "keywords": ["Kusto", "Cluster"],

      "version": "0.0.1",

      "updated": "2018-07-04"

    },

  "routes": [

      {

        "path": "kusto",

        "method": "GET",

        "url": "https://dpsemt.kusto.windows.net/v1/rest", //add your clusters rest API here

        "tokenAuth": {

          "url": "https://login.microsoftonline.com/{{.JsonData.AADId}}/oauth2/token",

          "params": {

            "grant_type":  "client_credentials",

            "client_id": "{{.JsonData.clientId}}",

            "client_secret": "{{.SecureJsonData.clientSecret}}",

            "resource": "https://dpsemt.kusto.windows.net/" //Add your clusters url here

          }

        }

      }

    ],


    "dependencies": {

      "grafanaVersion": "4.5.x",

      "plugins": [ ]

    },



    "metrics": true,

    "annotations": false

  }



